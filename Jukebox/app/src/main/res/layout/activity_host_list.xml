<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:choiceMode = "multipleChoice"
    android:background="@drawable/backgrounds"
    android:listSelector = "#8E8E90"
    tools:context="com.example.nayhakamboj.jukebox.HostList">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/songsListText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/upvoteButton"></ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Playlist"
        android:id="@+id/songsListText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add Songs"
        android:id="@+id/addSongsText2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Refresh Playlist"
        android:id="@+id/refreshPlaylistText2"
        android:layout_above="@+id/addSongsText2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="End Party"
        android:id="@+id/leavePartyText2"
        android:layout_below="@+id/refreshPlaylistText2"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:background="#ff0066"
        android:id="@+id/button4"
        android:layout_above="@+id/nextSongButton"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:background="#ff0066"
        android:id="@+id/upvoteButton"
        android:layout_alignTop="@android:id/list"
        android:layout_alignStart="@+id/downvoteButton"
        android:layout_marginTop="44dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:background="#ff0066"
        android:id="@+id/downvoteButton"
        android:layout_below="@+id/upvoteButton"
        android:layout_alignStart="@+id/button4"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Song"
        android:background="#ff0066"
        android:id="@+id/nextSongButton"
        android:layout_below="@android:id/list"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

</RelativeLayout>


